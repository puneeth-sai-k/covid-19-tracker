     <h1 class="main">Covid-19 India <img src=<%= ind_link %>  id="flag" alt=""></h1>

     <!-- container -->

    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-lg-4 col-md-6">
          <div class="card ca">
            <i class="fa fa-th-list" aria-hidden="true"></i>
            <h5>Total Cases</h5>
            <span id="cases"><%= india_totalcases %></span>
          </div>
        </div>
          <div class="col-lg-4 col-md-6">
            <div class="card a">
              <i class="fa fa-tachometer" aria-hidden="true"></i>
              <h5>Active Cases</h5>
              <span id="active"><%= india_activecases %></span>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="card r">
              <i class="fa fa-check-square" aria-hidden="true"></i>
              <h5>Recovered Cases</h5>
              <span id="recovered"><%= india_recoveredcases %></span>
            </div>
          </div>
          <div class="col-lg-4 col-md-6">
            <div class="card t">
              <i class="fa fa-eye" aria-hidden="true"></i>
              <h5>Total Tests Done</h5>
              <span id="tests"><%= india_testsdone %></span>
            </div>
          </div>
        <div class="col-lg-4 col-md-6">
          <div class="card cr">
            <i class="fa fa-times-circle" aria-hidden="true"></i>
            <h5>Critical Cases</h5>
            <span id="critical"><%= india_criticalcases %></span>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="card d">
            <i class="fa fa-window-close" aria-hidden="true"></i>
            <h5>Total Deaths</h5>
            <span id="death"><%= india_totaldeaths %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- chart -->

    <div class="stats">
    <h2 class="charth2" >Statewise Stats</h2>
    <div class="inchart">
      <canvas id="myChart"></canvas>
    </div>
    </div>

    <!-- statewise data in table form -->

    <table>
      <tr>
        <th><b></b></th>
        <th><b>DATE TIME</b></th>
        <th><b>STATE</b></th>
        <th><b>CONFIRMED</b></th>
        <th><b>ACTIVE</b></th>
        <th><b>RECOVERED</b></th>
        <th><b>DEATHS</b></th>
      </tr>
    </table>

